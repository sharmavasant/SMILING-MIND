  <script>
    var audioElement;

    function playMusic(musicFile) {
      if (audioElement) {
        audioElement.pause();
        audioElement = null;
      }
      audioElement = new Audio(musicFile);
      audioElement.play();
    }

    function stopMusic() {
      if (audioElement) {
        audioElement.pause();
        audioElement = null;
      }
    }
